<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="loggerTab" prefHeight="444.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.bjdavies1.githubsimpleinfo.controllers.RepoInfoController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <GridPane alignment="center" hgap="10" minWidth="500" vgap="10" xmlns:fx="http://javafx.com/fxml">
            <Label fx:id="UserNameInfoLabel" text="GitHub UserName" GridPane.columnIndex="0"
                   GridPane.rowIndex="0" />
            <TextField fx:id="UserNameArea" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <TextArea fx:id="RepoArea" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>
            <Button fx:id="UsePreviousNameButton" GridPane.rowIndex="2" GridPane.columnIndex="0"
                    text="Use UserName from other tab"/>
            <Button fx:id="UseEnteredNameButton" GridPane.columnIndex="1" GridPane.rowIndex="2"
                    text="Use UserName you just entered"/>
        </GridPane>
    </children>
</VBox>
